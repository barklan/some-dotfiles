{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "git smart commit",
            "type": "shell",
            "command": "git smart",
            "options": {
                "env": {
                    "GIT_EDITOR": "alacritty --working-directory . -e nvim"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "golangci-lint",
            "type": "shell",
            "command": "bash -ic 'yes_or_no \"Run golangci-lint?\" true && fish -ic \"golangci-lint run -c ~/sys/golint.yml\" || true'",
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "golangci-lint-project",
            "type": "shell",
            "command": "bash -ic 'yes_or_no \"Run golangci-lint?\" true && fish -ic \"golangci-lint run -c ./.golangci.yml\" || true'",
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "golines",
            "type": "shell",
            "command": "bash -ic 'golines -w -m 90 ${file}'",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
